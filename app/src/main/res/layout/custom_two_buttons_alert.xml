<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="15dp"
    app:cardElevation="20dp"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff"
        android:padding="15dp">
            <TextView
                android:id="@+id/AlertTitle_Two"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="@string/alertTitle"
                android:textSize="25sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:background="#B71F37"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/Alert_message_Two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="adnkdnknnncowironcnsvbunfubnifvnkjnhdbclieiluviulvilivbiuviidfncoianivivbinanoi"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/Alert_Cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:text=""
                    app:cornerRadius="10dp"
                    android:textAllCaps="false"
                    android:backgroundTint="#FF0A0A"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/white"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/Alert_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:text=""
                    app:cornerRadius="10dp"
                    android:textAllCaps="false"
                    android:layout_marginStart="10dp"
                    android:backgroundTint="#1E9E1E"
                    android:textColor="@color/white"/>
            </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>