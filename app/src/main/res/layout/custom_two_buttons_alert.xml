<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/fifteen_dp"
    app:cardCornerRadius="@dimen/ten_dp"
    app:cardElevation="@dimen/twenty_dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/fifty_dp">

        <TextView
            android:id="@+id/AlertTitle_Two"
            android:layout_width="match_parent"
            android:layout_height="@dimen/forty_five_dp"
            android:layout_marginTop="@dimen/ten_dp"
            android:background="#B71F37"
            android:gravity="center"
            android:text="@string/alertTitle"
            android:textColor="@color/white"
            android:textSize="@dimen/twenty_five_sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Alert_message_Two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/twenty_dp"
            android:layout_marginBottom="@dimen/ten_dp"
            android:text="@string/todo"
            android:textColor="@color/black"
            android:textSize="@dimen/font_sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/twenty_dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/Alert_Cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/ten_dp"
                android:layout_weight="1"
                android:backgroundTint="#FF0A0A"
                android:text=""
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/font_sp"
                app:cornerRadius="@dimen/ten_dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/Alert_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/ten_dp"
                android:layout_weight="1"
                android:backgroundTint="#1E9E1E"
                android:text=""
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/font_sp"
                app:cornerRadius="@dimen/ten_dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>