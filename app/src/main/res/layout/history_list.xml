<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/hundred_dp"
    android:layout_margin="@dimen/nav_header_vertical_spacing"
    app:cardCornerRadius="@dimen/nav_header_vertical_spacing"
    app:cardElevation="@dimen/four_dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/nav_header_vertical_spacing">

        <!-- ImageView for the item's image -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/fifty_dp"
            android:layout_height="@dimen/fifty_dp"
            android:contentDescription="@string/todo"
            android:scaleType="centerCrop"
            android:src="@drawable/qr_black" />

        <!-- LinearLayout to hold TextViews vertically -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/fab_margin"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Title TextView -->
            <TextView
                android:id="@+id/code_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/sixteen_sp"
                android:textStyle="bold" />

            <!-- Description TextView -->
            <TextView
                android:id="@+id/discription_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="@dimen/foruteen_sp" />

            <TextView
                android:id="@+id/scanned_date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/eleven_sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/delete_item"
            android:layout_width="@dimen/forty_eight_dp"
            android:layout_height="@dimen/forty_eight_dp"
            android:layout_margin="@dimen/five_dp"
            android:contentDescription="@string/todo"
            android:scaleType="center"
            android:src="@drawable/delete" />

        <!-- Right Arrow ImageView -->
        <ImageView
            android:id="@+id/next_arrow"
            android:layout_width="@dimen/forty_eight_dp"
            android:layout_height="@dimen/forty_eight_dp"
            android:layout_margin="@dimen/nav_header_vertical_spacing"
            android:contentDescription="@string/todo"
            android:scaleType="center"
            android:src="@drawable/arrow_forward" />

    </LinearLayout>


</androidx.cardview.widget.CardView>