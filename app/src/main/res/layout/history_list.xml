<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/nav_header_vertical_spacing"
    app:cardCornerRadius="@dimen/nav_header_vertical_spacing"
    app:cardElevation="@dimen/four_dp"
    android:layout_height="@dimen/hundred_dp">


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:padding="@dimen/nav_header_vertical_spacing"
        android:gravity="center">

        <!-- ImageView for the item's image -->
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/fifty_dp"
            android:layout_height="@dimen/fifty_dp"
            android:src="@drawable/qr_black"
            android:scaleType="centerCrop" />

        <!-- LinearLayout to hold TextViews vertically -->
        <LinearLayout
            android:layout_width="@dimen/zero_dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/fab_margin">

            <!-- Title TextView -->
            <TextView
                android:id="@+id/code_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/sixteen_sp"
                android:textStyle="bold"/>

            <!-- Description TextView -->
            <TextView
                android:id="@+id/discription_tv"
                android:layout_width="@dimen/two_hundred_dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/foruteen_sp"/>

            <TextView
                android:id="@+id/scanned_date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/eleven_sp"/>

        </LinearLayout>

        <!-- Right Arrow ImageView -->
        <ImageView
            android:id="@+id/next_arrow"
            android:layout_width="@dimen/twenty_four_dp"
            android:layout_height="@dimen/twenty_four_dp"
            android:layout_margin="@dimen/fab_margin"
            android:src="@drawable/arrow_forward" />

    </LinearLayout>


</androidx.cardview.widget.CardView>