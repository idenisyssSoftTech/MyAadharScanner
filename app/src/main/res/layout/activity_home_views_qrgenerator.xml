<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.EnterDetailsactivity">

    <TextView
        android:id="@+id/generate"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/four_dp"
        android:text="Generate"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/purple_500"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/fab_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/home_imageView">

    </TextView>
    <!-- ImageView -->
    <ImageView
        android:id="@+id/home_imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/map"
        android:layout_marginTop="@dimen/fab_margin"
        app:layout_constraintTop_toBottomOf="@+id/generate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="centerInside" />

    <EditText
        android:id="@+id/data_content_tv"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:padding="@dimen/four_dp"
        android:layout_margin="@dimen/fab_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_imageView"
        app:layout_constraintBottom_toTopOf="@id/buttonLayout">

    </EditText>

    <!-- Button Layout -->
    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/fab_margin"
        app:layout_constraintTop_toBottomOf="@+id/data_content_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- First Button -->
        <Button
            android:id="@+id/create_qr_but"
            android:layout_width="0dp"
            android:textAllCaps="false"
            android:background="@drawable/gradient"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/four_dp"
            android:layout_weight="1"
            android:text="QR code" />

        <!-- Second Button -->
        <Button
            android:id="@+id/create_bar_code_but"
            android:layout_width="0dp"
            android:background="@drawable/gradient"
            android:textAllCaps="false"
            android:layout_margin="@dimen/four_dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=" Bar code" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>