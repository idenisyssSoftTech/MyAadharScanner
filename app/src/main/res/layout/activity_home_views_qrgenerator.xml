<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.EnterDetailsactivity">

    <TextView
        android:id="@+id/generate"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/four_dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/purple_500"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/fab_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/home_imageView">

    </TextView>
    <!-- ImageView -->
    <ImageView
        android:id="@+id/home_imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/map"
        android:layout_marginTop="@dimen/fab_margin"
        app:layout_constraintTop_toBottomOf="@+id/generate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:scaleType="centerInside" />
    <ScrollView
        android:id="@+id/my_card_linear"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_imageView"
        app:layout_constraintBottom_toTopOf="@id/buttonLayout"
        android:layout_height="wrap_content">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/data_content_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty_dp"
                android:padding="@dimen/four_dp"
                android:layout_margin="@dimen/fab_margin">
            </EditText>

            <EditText
                android:id="@+id/my_card_phone_no_tv"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="@dimen/fifty_dp"
                android:padding="@dimen/four_dp"
                android:maxLength="10"
                android:inputType="number"
                android:hint="Phone no"
                android:layout_margin="@dimen/fab_margin">
            </EditText>
            <EditText
                android:id="@+id/my_card_email_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty_dp"
                android:padding="@dimen/four_dp"
                android:visibility="gone"
                android:hint="@string/email"
                android:inputType="text"
                android:layout_margin="@dimen/fab_margin">
            </EditText>
            <EditText
                android:id="@+id/my_card_address_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/fifty_dp"
                android:padding="@dimen/four_dp"
                android:visibility="gone"
                android:inputType="text"
                android:hint="@string/address"
                android:layout_margin="@dimen/fab_margin">
            </EditText>

        </LinearLayout>



    </ScrollView>

    <!-- Button Layout -->
    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/fab_margin"
        app:layout_constraintTop_toBottomOf="@+id/my_card_linear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- First Button -->
        <Button
            android:id="@+id/create_qr_but"
            android:layout_width="0dp"
            android:textAllCaps="false"
            android:background="@drawable/gradient"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/four_dp"
            android:layout_weight="1"
            android:text="@string/qr_code" />

        <!-- Second Button -->
        <Button
            android:id="@+id/create_bar_code_but"
            android:layout_width="0dp"
            android:background="@drawable/gradient"
            android:textAllCaps="false"
            android:layout_margin="@dimen/four_dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/barcodeBtn" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>