<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_500"
    tools:context=".activities.SplashActivity">

    <ImageView
        android:id="@+id/splashImage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hundred_dp"
        android:layout_centerInParent="true"
        android:src="@drawable/qr"
        android:scaleType="fitCenter"
        android:contentDescription="@string/todo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_margin="@dimen/ten_dp"
        android:textAlignment="center"
        android:textSize="@dimen/twenty_five_sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:text="@string/app_name"
        android:layout_below="@id/splashImage"/>

    <!-- Checkbox for accepting Terms and Conditions -->
    <!-- Container for CheckBox and TextView -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/privacy_textview"
        android:layout_marginBottom="@dimen/nav_header_vertical_spacing">

        <CheckBox
            android:id="@+id/termsCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/forty_eight_dp"
            android:paddingTop="@dimen/four_dp"
            android:paddingBottom="@dimen/four_dp"
            android:layout_alignParentStart="true"
            android:text="@string/i_agree_to"
            android:textSize="@dimen/foruteen_sp" />

        <TextView
            android:id="@+id/termstextview"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/forty_eight_dp"
            android:layout_toEndOf="@id/termsCheckbox"
            android:padding="@dimen/four_dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/menu_terms_condition"
            android:textStyle="bold"
            android:focusable="true"
            android:textColor="@color/yellow"
            android:textSize="14sp" />

    </RelativeLayout>
    <TextView
        android:id="@+id/privacy_textview"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/forty_eight_dp"
        android:textStyle="bold"
        android:padding="@dimen/nav_header_vertical_spacing"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/twenty_dp"
        android:text="@string/privacy_policy"
        android:textColor="@color/yellow"
        android:textSize="14sp"
        android:clickable="true"
        android:focusable="auto" />


</RelativeLayout>